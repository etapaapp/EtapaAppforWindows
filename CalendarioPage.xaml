<Page
    x:Class="EtapaApp.CalendarioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EtapaApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Page.Resources>
        <local:TipoProvaToBrushConverter x:Key="TipoProvaToBrushConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" MinWidth="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Painel Esquerdo -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Controles superiores alinhados -->
            <Grid Grid.Row="0" Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ComboBox de mês -->
                <ComboBox x:Name="MesComboBox" 
                          Grid.Column="0"
                          Header="Mês" 
                          PlaceholderText="Selecione um mês"
                          SelectionChanged="MesComboBox_SelectionChanged"
                          HorizontalAlignment="Stretch"
                          Margin="0,0,8,0"/>

                <!-- Botão de filtro ao lado -->
                <Button x:Name="FiltroButton" 
                        Grid.Column="1"
                        VerticalAlignment="Bottom"
                        MinWidth="100">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE71C;"/>
                        <TextBlock Text="Filtrar"/>
                    </StackPanel>
                    <Button.Flyout>
                        <MenuFlyout>
                            <ToggleMenuFlyoutItem x:Name="FiltroTodos" Text="Mostrar Todas" Click="Filtro_Click" IsChecked="True"/>
                            <ToggleMenuFlyoutItem x:Name="FiltroProvas" Text="Apenas Provas" Click="Filtro_Click"/>
                            <ToggleMenuFlyoutItem x:Name="FiltroRecuperacoes" Text="Apenas Recuperações" Click="Filtro_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>

            <!-- StatusBar (AGORA ABAIXO DOS CONTROLES) -->
            <InfoBar x:Name="StatusBar" Grid.Row="1" IsOpen="False" Severity="Error" Margin="12,0,12,12"/>

            <!-- Lista de provas -->
            <ScrollViewer Grid.Row="2" Margin="12,0,12,12">
                <StackPanel>
                    <ListView x:Name="ProvasListView"
                              SelectionMode="Single"
                              SelectionChanged="ProvasListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ProvaItem">
                                <Grid Margin="0,4" Padding="12" 
                                      Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" 
                                      CornerRadius="8"
                                      BorderThickness="1"
                                      BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Informações principais -->
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="{x:Bind Data}" 
                                                   FontWeight="Bold" 
                                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock Text="{x:Bind Materia}" 
                                                   Style="{StaticResource BodyTextBlockStyle}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="Wrap"
                                                   MaxLines="2"/>
                                    </StackPanel>

                                    <!-- Informações secundárias -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" 
                                                Orientation="Horizontal" 
                                                Spacing="12" 
                                                Margin="0,6,0,0">
                                        <TextBlock Text="{x:Bind Codigo}" 
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                                   FontSize="12"
                                                   FontWeight="Medium"/>
                                        <TextBlock Text="{x:Bind Conjunto}" 
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                                   FontSize="12"/>
                                    </StackPanel>

                                    <!-- Badge do tipo -->
                                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            Padding="10,6"
                                            CornerRadius="12"
                                            Background="{Binding Tipo, Converter={StaticResource TipoProvaToBrushConverter}}">
                                        <TextBlock Text="{x:Bind TipoBadge}" 
                                                   FontSize="11" 
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Mensagem quando não há provas -->
                    <TextBlock x:Name="SemProvasTextBlock"
                               Text="Nenhuma prova encontrada para os filtros selecionados."
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="20"
                               Visibility="Collapsed"/>

                    <!-- Loading indicator -->
                    <ProgressRing x:Name="LoadingRing"
                                  IsActive="False"
                                  Width="40" Height="40"
                                  HorizontalAlignment="Center"
                                  Margin="20"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Divisor redimensionável com cores dinâmicas baseadas no tema -->
        <Grid Grid.Column="1" 
              Width="6" 
              Background="{ThemeResource SystemControlForegroundBaseLowBrush}">
            <Rectangle Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                       Width="1" 
                       HorizontalAlignment="Center"/>
            <Rectangle Fill="Transparent" 
                       Width="6" 
                       HorizontalAlignment="Stretch"
                       PointerEntered="Divisor_PointerEntered"
                       PointerExited="Divisor_PointerExited"
                       PointerPressed="Divisor_PointerPressed"
                       PointerMoved="Divisor_PointerMoved"
                       PointerReleased="Divisor_PointerReleased"/>
        </Grid>

        <!-- Painel Direito -->
        <Grid Grid.Column="2">
            <!-- Placeholder quando nenhuma prova selecionada -->
            <TextBlock x:Name="PlaceholderDetalhes"
                       Text="Selecione uma prova para ver os detalhes."
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

            <!-- Conteúdo dos detalhes -->
            <Grid x:Name="DetalhesGrid" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título da matéria -->
                <Border Grid.Row="0" 
                        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
                        Padding="24,20"
                        Margin="12,12,12,0"
                        CornerRadius="8,8,0,0"
                        BorderThickness="1,1,1,0"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
                    <TextBlock x:Name="TituloMateriaTextBlock" 
                               Style="{StaticResource TitleTextBlockStyle}" 
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap"/>
                </Border>

                <!-- Conteúdo da matéria -->
                <Border Grid.Row="1"
                        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
                        Margin="12,0,12,12"
                        CornerRadius="0,0,8,8"
                        BorderThickness="1,0,1,1"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
                    <WebView2 x:Name="MateriaWebView"
                              DefaultBackgroundColor="Transparent"
                              Margin="0"/>
                </Border>
            </Grid>

            <!-- Loading indicator para detalhes -->
            <ProgressRing x:Name="LoadingDetalhesRing"
                          IsActive="False"
                          Width="40" Height="40"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>